<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_proforma_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="background-color: #fcfdfe; position: relative;">
                        <div class="row mt-4 mb-4" style="border-left: 10px solid #007bff; padding: 20px; background-color: #ffffff; box-shadow: 2px 2px 10px rgba(0,0,0,0.05);">
                            <div class="col-12">
                                <h2 style="color: #007bff; font-weight: bold; margin-bottom: 0;">FACTURA PROFORMA</h2>
                                <span style="color: #6c757d; font-size: 0.9em; letter-spacing: 1px;">DOCUMENTO PRELIMINAR</span>
                            </div>
                        </div>

                        <div class="row mb-5">
                            <div class="col-6" style="padding: 15px; background-color: #ffffff; border: 1px solid #e9ecef; border-radius: 5px;">
                                <strong style="color: #007bff;">INFORMACIÓN DEL PROYECTO</strong><br/>
                                <h4 class="mt-2" t-field="o.name"/>
                                <p class="m-0">Fecha Emisión: <span t-field="o.create_date" t-options='{"widget": "date"}'/></p>
                            </div>
                        </div>

                        <table class="table" style="background-color: #ffffff;">
                            <thead style="background-color: #007bff; color: white;">
                                <tr>
                                    <th style="color: white !important;">DESCRIPCIÓN</th>
                                    <th class="text-end" style="color: white !important;">BASE</th>
                                    <th class="text-end" style="color: white !important;">IVA</th>
                                    <th class="text-end" style="color: white !important;">TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Servicios integrales de construcción</td>
                                    <td class="text-end"><span t-field="o.coste"/> €</td>
                                    <td class="text-end"><span t-field="o.iva"/> €</td>
                                    <td class="text-end" style="background-color: #f1f8ff; font-weight: bold;"><span t-field="o.total"/> €</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="mt-5 p-3" style="background-color: #fff3cd; border-radius: 5px; color: #856404; font-size: 0.85em;">
                            <strong>Aviso Importante:</strong> Esta proforma tiene una validez de 15 días naturales. El precio puede variar según ajustes técnicos en la obra.
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
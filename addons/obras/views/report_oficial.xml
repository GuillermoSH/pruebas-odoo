<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_oficial_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="prisma_reports.external_layout_prisma">
                    <div class="page" style="font-family: 'Helvetica'; color: #2c3e50;">

                        <table style="width: 100%; margin-bottom: 20px; border: 0px solid #fff;">
                            <tr>
                                <td style="width: 50%;">
                                    <t t-if="o.partner_id and o.partner_id.image_1920">
                                        <img t-att-src="image_data_uri(o.partner_id.image_1920)"
                                            style="max-height: 80px;" />
                                    </t>
                                </td>
                                <td
                                    style="width: 50%; text-align: right; font-size: 12px; color: #718096;">
                                    <t t-if="o.partner_id">
                                        <strong style="color: #003f7e;" t-field="o.partner_id.name" />
                                        <br />
                                        <span t-field="o.partner_id.street" />
                                        <br />
                                        <span t-field="o.partner_id.city" />
                                        <t t-if="o.partner_id.country_id"> , <span
                                                t-field="o.partner_id.country_id.name" />
                                        </t>
                                        <br />
                                        <t t-if="o.partner_id.vat"> ID: <span
                                                t-field="o.partner_id.vat" />
                                        </t>
                                    </t>
                                </td>
                            </tr>
                        </table>

                        <div
                            style="width: 100%; border-left: 6px solid #003f7e; border-radius: 10px; padding: 25px 30px; background-color: #E6E8F0; margin-bottom: 30px;">
                            <table style="width: 100%; border: 0px solid #fff; border-collapse: collapse;">
                                <tr>
                                    <td style="vertical-align: middle; text-align: left; border: 1px solid #E6E8F0;">
                                        <h1
                                            style="margin: 0; padding: 0; color: #003f7e !important; font-weight: bold; font-size: 28px; line-height: 1.1;">
                                            FACTURA OFICIAL
                                        </h1>
                                        <p
                                            style="margin: 5px 0 0 0; padding: 0; color: #6c757d !important; text-transform: uppercase; font-size: 10px; letter-spacing: 1px; white-space: nowrap;">
                                            Referencia: <span t-field="o.name" />
                                        </p>
                                    </td>

                                    <td style="vertical-align: middle; text-align: right; border: 1px solid #E6E8F0;">
                                        <h2
                                            style="margin: 0; padding: 0; color: #003f7e !important; font-weight: bold; font-size: 24px; line-height: 1.1;">
                                            <span t-field="o.total"
                                                t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}' />
                                        </h2>
                                        <p
                                            style="margin: 2px 0 0 0; padding: 0; color: #6c757d !important; font-size: 10px; text-transform: uppercase;">
                                            Total a Pagar
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <table
                            style="width: 100%; border: 0px solid #fff; border-radius: 8px; overflow: hidden;">
                            <thead>
                                <tr style="background-color: #2c3e50; color: white;">
                                    <th
                                        style="padding: 12px; text-align: left; font-size: 12px; text-transform: uppercase;">Descripción
                                        del Proyecto</th>
                                    <th
                                        style="padding: 12px; text-align: right; font-size: 12px; text-transform: uppercase; width: 120px;">
                                        Base</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td
                                        style="padding: 15px; border: 0px solid #fff; color: #4a5568;">
                                        Ejecución de obra: <span t-field="o.name" />
                                    </td>
                                    <td
                                        style="padding: 15px; border: 0px solid #fff; text-align: right; color: #4a5568;">
                                        <span t-field="o.coste"
                                            t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}' />
                                    </td>
                                </tr>
                                <tr style="background-color: #f8fafc; color: #003f7e !important;">
                                    <td style="padding: 15px; text-align: right;">
                                        <strong>TOTAL FINAL (IVA INCLUIDO)</strong>
                                    </td>
                                    <td style="padding: 15px; text-align: right; font-size: 1.2em;">
                                        <strong>
                                            <span t-field="o.total"
                                                t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}' />
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>